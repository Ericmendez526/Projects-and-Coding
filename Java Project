package com.mycompany.ecommercecheckout;

/**
 *
 * @author mendezmendez
 */
class Names 
{
    private static String names = "";
    private static byte numberOfRooms;
    private static float totalPrice;
    
    public Names(String name, float price, byte lengthOfStay)
    {
        names += name + ", ";
        ++numberOfRooms;
        totalPrice += (float)(price *  lengthOfStay);
    }
    
    public static byte returnNumberOfRooms()
    {
        return numberOfRooms;
    }
    
    public static String returnNames()
    {
            return names;    
    }
    
    public static float returnTotalPrice()
    {
        return totalPrice;
    }
}



// Class 3


class NamesChild extends Names
{
    public NamesChild(String name, float nightlyPrice, float surcharge, byte lengthOfStay)
    {
        super(name, nightlyPrice + surcharge, lengthOfStay);
    }
}
